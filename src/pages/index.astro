---
import fs from 'node:fs';
import path from 'node:path';
import { generateMarketModel } from '../utils/analysis';
import type { Listing } from '../utils/analysis';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Calculator from '../components/Calculator.astro';
import Footer from '../components/Footer.astro';

// --- Build Time Analysis ---
const dataDir = path.join(process.cwd(), 'data/json');
let listings: Listing[] = [];

try {
    if (fs.existsSync(dataDir)) {
        const files = fs.readdirSync(dataDir).filter(f => f.endsWith('.json'));
        listings = files.map(file => {
            const filePath = path.join(dataDir, file);
            try {
                const json = JSON.parse(fs.readFileSync(filePath, 'utf-8'));
                return Array.isArray(json) ? json : [json];
            } catch (e) { return []; }
        }).flat();
        console.log(`Loaded ${listings.length} listings from ${files.length} JSON files.`);
    } else {
        console.warn(`Warning: data/json directory not found. Run 'yarn process' to generate data.`);
    }
} catch (e) { console.error("Error reading data:", e); }

const model = generateMarketModel(listings);
const { 
    generatedAt, sampleSize, 
    intercept, coefSqft, coefYear, coefParking, coefBathroom, coefEndUnit, coefAC, coefCityPM,
    baseRateCoq, premiumPM, feeSlope, feeIntercept 
} = model;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DepreCity | Advanced Valuation Model</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

    <style>
        body { font-family: 'Inter', sans-serif; background-color: #fcfcfc; color: #2e2e2e; }
        h1, h2, h3, h4, h5 { font-family: 'Merriweather', serif; }
        .prose-custom p { margin-bottom: 1.5rem; line-height: 1.8; color: #4b5563; }
        input[type=range] { -webkit-appearance: none; background: transparent; }
        input[type=range]::-webkit-slider-thumb { -webkit-appearance: none; }
        input[type=range]:focus { outline: none; }
    </style>
</head>
<body class="antialiased">

    <Header generatedAt={generatedAt} />
    <Hero sampleSize={sampleSize} />
    <Calculator
        intercept={intercept}
        coefSqft={coefSqft}
        coefYear={coefYear}
        coefParking={coefParking}
        coefBathroom={coefBathroom}
        coefEndUnit={coefEndUnit}
        coefAC={coefAC}
        coefCityPM={coefCityPM}
        feeSlope={feeSlope}
        feeIntercept={feeIntercept}
    />
    <Footer />

    <!-- Client-Side Logic -->
    <script define:vars={{ intercept, coefSqft, coefYear, coefParking, coefBathroom, coefEndUnit, coefAC, coefCityPM, feeSlope, feeIntercept }}>
        document.addEventListener('DOMContentLoaded', () => {
            
            const inputs = {
                city: document.getElementById('inputCity'),
                year: document.getElementById('inputYear'),
                area: document.getElementById('inputArea'),
                bath: document.getElementById('inputBath'),
                parking: document.getElementById('inputParking'),
                endUnit: document.getElementById('checkEndUnit'),
                ac: document.getElementById('checkAC'),
                fee: document.getElementById('inputFee')
            };

            const outputs = {
                price: document.getElementById('outputPrice'),
                psqft: document.getElementById('outputPsqft'),
                valSize: document.getElementById('valSize'),
                valAge: document.getElementById('valAge'),
                valFeatures: document.getElementById('valFeatures'),
                valLoc: document.getElementById('valLoc'),
                expFee: document.getElementById('outputExpFee')
            };

            function format(num) {
                return new Intl.NumberFormat('en-CA', { style: 'currency', currency: 'CAD', maximumFractionDigits: 0 }).format(num);
            }

            function calculate() {
                // Get Values
                const cityPM = parseInt(inputs.city.value);
                const year = parseFloat(inputs.year.value);
                const area = parseFloat(inputs.area.value);
                const bath = parseFloat(inputs.bath.value);
                const parkingScore = parseFloat(inputs.parking.value);
                const isEnd = inputs.endUnit.checked ? 1 : 0;
                const isAC = inputs.ac.checked ? 1 : 0;

                // 1. Multivariate Regression Formula
                // Price = Intercept + (Sqft*B1) + (Year*B2) + (Pkg*B3) + (Bath*B4) + (End*B5) + (AC*B6) + (City*B7)
                
                const valSize = area * coefSqft;
                const valAge = year * coefYear;
                const valParking = parkingScore * coefParking;
                const valBath = bath * coefBathroom;
                const valEnd = isEnd * coefEndUnit;
                const valAC = isAC * coefAC;
                const valCity = cityPM * coefCityPM;

                let predictedPrice = intercept + valSize + valAge + valParking + valBath + valEnd + valAC + valCity;

                // 2. Strata Fee Adjustment (NPV Penalty)
                // Benchmark Fee based on regression
                const benchmarkFee = (area * feeSlope) + feeIntercept;
                outputs.expFee.value = format(benchmarkFee) + "/mo";
                
                const actualFee = parseFloat(inputs.fee.value) || benchmarkFee;
                const excessFee = actualFee - benchmarkFee;
                
                // Capitalize excess fee at 5% (The "Drag")
                if (excessFee > 0) {
                    const penalty = (excessFee * 12) / 0.05;
                    predictedPrice -= penalty;
                }

                // Render
                outputs.price.innerText = format(predictedPrice);
                outputs.psqft.innerText = format(predictedPrice / area) + " / sqft";

                outputs.valSize.innerText = (valSize > 0 ? "+" : "") + format(valSize);
                outputs.valAge.innerText = (valAge > 0 ? "+" : "") + format(valAge);
                outputs.valFeatures.innerText = "+" + format(valParking + valBath + valEnd + valAC);
                outputs.valLoc.innerText = "+" + format(valCity);
            }

            // Attach Listeners
            Object.values(inputs).forEach(input => {
                input.addEventListener('input', calculate);
                input.addEventListener('change', calculate);
            });

            calculate();
        });
    </script>
</body>
</html>
